<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Checkout\Model\CompositeConfigProvider">
        <arguments>
            <argument name="configProviders" xsi:type="array">
                <item name="worldline_config_provider" xsi:type="object">Worldline\Payment\CreditCard\UI\ConfigProvider</item>
                <item name="worldline_hosted_checkout_config_provider" xsi:type="object">Worldline\Payment\HostedCheckout\UI\ConfigProvider</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Vault\Model\Ui\TokensConfigProvider">
        <arguments>
            <argument name="tokenUiComponentProviders" xsi:type="array">
                <item name="worldline_cc" xsi:type="object">Worldline\Payment\CreditCard\UI\TokenUiComponentProvider</item>
                <item name="worldline_hosted_checkout" xsi:type="object">Worldline\Payment\HostedCheckout\UI\TokenUiComponentProvider</item>
            </argument>
        </arguments>
    </type>
</config>
